<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".StaffLogin">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent">


        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingTop="140dp"
            android:text="Please enter your staff account"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtUsername1"
            android:drawablePadding="10dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/profile_image_view_layout"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_user"
            android:layout_marginLeft="16dp"
            android:paddingLeft="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="190dp"
            android:ems="15"
            android:hint="Username"
            android:text="staff"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtPassword1"
            android:drawablePadding="10dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/profile_image_view_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="245dp"
            android:drawableLeft="@drawable/ic_pass"
            android:ems="15"
            android:hint="Password"
            android:text="123"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/ivLogo2"
            android:layout_width="350px"
            android:layout_height="250px"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/coffee" />

        <CheckBox
            android:id="@+id/checkbox_forgotpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="298dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="12dp"
            android:text="Remember password?" />

        <Button
            android:id="@+id/btnLogin1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/button_login"
            android:text="LOGIN" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvWelcom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="#ffffff"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>